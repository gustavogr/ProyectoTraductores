create
 int bot contador
     on default:
         store 35.
     end
 end
 int bot bar
     on activation:
        collect as a.
        read as b.
        drop a + 3.
     end
 end


execute
 activate contador, bar.
 $- Asignar al contador
 el valor 35, si bar > 2 -$
 if bar > 2 - contador:
     advance contador.
     advance contador.
 else :
     advance bar.
     advance bar.
 end
end