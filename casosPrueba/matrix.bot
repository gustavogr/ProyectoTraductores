create
    int bot n
        on activation:
            store 5.
        end
        on default:
            drop me.
            down 5/0.           
            store me - 1.
        end
    end
    char bot c
        on default:
            collect.
            down.
            send.
        end
    end
execute
    activate n,c.
    advance n,c.
    deactivate n,c.
end
